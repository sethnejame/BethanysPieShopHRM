@inherits BenefitSelectorBase;

@if (Benefits == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <table class="table table-sm">
                <tr>
                    <th class="w-auto">Benefit</th>
                </tr>
                @foreach (var benefit in Benefits)
                {
                    <tr @key="benefit"> @*Assigning @key here allows the diff mechanism to register changes to iterated elements*@   
                        <td>
                            @benefit.Description
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}